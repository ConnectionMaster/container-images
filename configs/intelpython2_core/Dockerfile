FROM centos:7
MAINTAINER Robert Cohn <Robert.S.Cohn@intel.com>

# This file is automatically generated from tpl.Dockerfile

RUN yum-config-manager --add-repo http://yum.qa.intel.com.s3-website-us-west-2.amazonaws.com/INTELPYTHON/setup/intelpython-qa.repo \
    && rpm --import  http://yum.qa.intel.com.s3-website-us-west-2.amazonaws.com/INTELPYTHON/setup/INTEL_PYTHON_GPG_KEY \
    && yum install -y intel-python27 --disablerepo="*" --enablerepo="intelpython-qa"

# Add Tini
ENV TINI_VERSION v0.13.1
ADD https://github.com/krallin/tini/releases/download/${TINI_VERSION}/tini /tini
RUN chmod +x /tini

ENV PATH /opt/intel/intelpython27/bin:$PATH
ENTRYPOINT ["/tini", "--"]
CMD ["/bin/bash"]
